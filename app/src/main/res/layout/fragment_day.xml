<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DayFragment"
    android:background="#cdedf3">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cdedf3">

        <TextView
            android:id="@+id/fragment_day_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment"
            android:textColor="#7272f2"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Events"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="66dp"
            android:textSize="30dp"
            android:textColor="#fa9746"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/event_recycler_view"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Long press to delete"
            android:id="@+id/textView"
            android:layout_marginEnd="22dp"
            android:layout_above="@+id/event_recycler_view"
            android:layout_alignParentEnd="true"
            android:textColor="#f1e820"
            android:textStyle="bold" />


    </RelativeLayout>

</FrameLayout>
